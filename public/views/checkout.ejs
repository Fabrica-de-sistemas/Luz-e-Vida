<%- include('partials/header') %>
<!-- Seção principal para a página de checkout -->
<section class="bg-gray-100 font-sans h-screen">
    <!-- Container para centralizar o conteúdo -->
    <div class="min-h-screen flex items-center justify-center">
        <!-- Container do formulário de checkout -->
        <div class="bg-white rounded-lg shadow-md overflow-hidden flex md:w-9/10">
            <!-- Lado esquerdo: Formulário de checkout -->
            <div class="p-8 md:p-12 lg:p-16 md:w-1/2 text-gray-800 flex flex-col justify-between">
                <div>
                    <!-- Título do formulário -->
                    <h2 class="text-2xl md:text-3xl lg:text-4xl font-bold mb-4">Finalizar Doação</h2>
                    <!-- Subtítulo do formulário -->
                    <p class="text-sm md:text-base mb-6">Preencha os dados abaixo para concluir sua doação.</p>
                    <!-- Início do formulário -->
                    <form class="space-y-4">
                        <!-- Campo de entrada para o nome completo -->
                        <div>
                            <label for="nome" class="block text-gray-700 text-sm font-bold mb-2">Nome Completo</label>
                            <input type="text" id="nome" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="Seu nome completo">
                        </div>
                        <!-- Campo de entrada para o email -->
                        <div>
                            <label for="email" class="block text-gray-700 text-sm font-bold mb-2">Email</label>
                            <input type="email" id="email" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="Seu email">
                        </div>
                        <!-- Campo de entrada para o CPF -->
                        <div>
                            <label for="cpf" class="block text-gray-700 text-sm font-bold mb-2">CPF</label>
                            <input type="text" id="cpf" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="Seu CPF">
                        </div>
                        <!-- Campo de entrada para o valor da doação (desabilitado) -->
                        <div>
                            <label for="valor" class="block text-gray-700 text-sm font-bold mb-2">Valor da Doação</label>
                            <input type="text" id="valor" disabled class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" value="<%= valor %>" placeholder="R$ 10,00">
                        </div>
                        <!-- Botão para finalizar a doação -->
                        <button type="submit" class="bg-[#FAB515] hover:bg-yellow-500 text-white font-bold py-3 px-6 rounded-md">Doar Agora</button>
                    </form>
                </div>
            </div>
            <!-- Lado direito: Imagem placeholder (oculta em telas pequenas) -->
            <div class="hidden md:block bg-gray-300 w-1/2" style="background-image: url(placeholder);"></div>
        </div>
    </div>
</section>
